<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Maxsulot</th>
                        <th>Narx</th>
                        <th>Maxsulot soni</th>
                        <th>Jami</th>
                        <th>O'chirish</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#if posterId}}
                    <tr>
                        <td class="align-middle"><img src="img/product-5.jpg" alt="" style="width: 50px;">{{posterId.productName}}
                        </td>
                        <td class="align-middle">{{posterId.amount}}</td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-minus">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text"
                                    class="form-control form-control-sm bg-secondary border-0 text-center" value="1">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-primary btn-plus">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle" id="price">{{posterId.amount}}</td>
                        <td class="align-middle"><button class="btn btn-sm btn-danger"><i
                                    class="fa fa-times"></i></button></td>
                    </tr>
                    {{else}}
                    <h1>maxsulot topilmadi</h1>
                    {{/if}}
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
          
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">savat xulosasi</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Umumiy narx</h6>
                        <h6 id="subtotal">85000</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Yetkazib berish</h6>
                        <h6 class="font-weight-medium " id="delvery-price">25000</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Jami</h5>
                        <h5 id="allPrice">0</h5>
                    </div>
                    {{#if user}}
                    <a href="/shoping/buy"> <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Buyurtma berish</button></a>
                    {{else}}
                     <a href="/auth/login">  <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Buyurtma berish</button></a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->